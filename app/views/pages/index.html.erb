
<h4>All pages</h4>
<%= link_to 'add page', new_page_path %>
<table style="width:90%" border="5" bordercolor="blue">
 <tr>
   <th>id</th>
   <th>subject_id</th>
   <th> permalink</th>
   <th>name</th>
   <th>position</th>
   <th>visible</th>
 </tr>
 <% @pages.each do |i| %>
 <tr>
     <td> <%= i.id %></td>
     <td> <%= i.subject.name %></td>
     <td> <%= i.permalink %></td>
     <td> <%= i.name %></td>
     <td><%= get_visibility_status(i.visible) %> </td>
     <td> <%= i.visible %></td>
     <td><%= link_to 'show', page_path(i) %>
     <%= link_to 'edit', edit_page_path(i) %>
     <%= link_to 'delete', page_path(i), method: :delete %>
    </td>

 </tr>
 <% end %>
</table>
